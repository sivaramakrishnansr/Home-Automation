<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".MainActivity" >
    <TextView
        android:id="@+id/txtText"
       android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<!-- android:background="@drawable/buttonshape"-->

    <Button
        android:id="@+id/button2"
        android:layout_width="130dp"
         android:layout_height="40dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignRight="@+id/btnSpeak"
        android:layout_below="@+id/btnSpeak"
        android:layout_marginTop="68dp"
        android:onClick="onClickoff"
        android:text="@string/light_off" />

    <Button
        android:id="@+id/button4"
        android:layout_width="130dp"
         android:layout_height="40dp"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/txtText"
        android:layout_alignTop="@+id/button3"
        android:onClick="onClickon2"
        android:text="@string/fan_on" />

    <Button
        android:id="@+id/button1"
        android:layout_width="130dp"
         android:layout_height="40dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignTop="@+id/button2"
        android:onClick="onClickon"
        android:text="@string/light_on" />

    <Button
        android:id="@+id/button3"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/btnSpeak"
        android:layout_below="@+id/button2"
        android:layout_marginTop="80dp"
        android:onClick="onClickoff2"
        android:text="@string/fan_off" />

    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/txtText"
        android:layout_margin="10dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/fan_off"
        android:src="@android:drawable/ic_btn_speak_now"
        android:textColor="#F3FFFD"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button11"
        android:layout_centerHorizontal="true"
        android:onClick="updateGallery"
        android:text="Update Visitor Log" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="moodLight"
        android:text="Mood Lighting" />
    
</RelativeLayout>